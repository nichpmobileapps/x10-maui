<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X10Card.MainPage"
             xmlns:loca="clr-namespace:X10Card"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="True"
             >

    <!-- Title bar -->
    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
            <Image Source="ic_himachallogo.png" HeightRequest="40" VerticalOptions="Center"/>
            <Label Text="X10 (Registration Card)"
                   Grid.Column="1"
                   FontSize="18"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>
    </NavigationPage.TitleView>

    <!-- Main Page Layout -->
    <Grid RowDefinitions="*, Auto, Auto" Margin="9">

        <!-- Main Content Area with Header, Border, and Scrollable Description -->
        <Border Grid.Row="0" Stroke="Silver" Padding="15" StrokeThickness="1"
                StrokeShape="RoundRectangle 10" BackgroundColor="White">

            <!-- Nested Grid to correctly separate static header and scrollable content -->
            <Grid RowDefinitions="Auto, *" RowSpacing="15">

                <!-- Header Section (Static) -->
                <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center" Spacing="5">
                    <Image Source="ic_launcher.png" x:Name="img_launcher" HeightRequest="110"/>
                    <Label Text="Department Of Labour And Employment&#10; Government Of Himachal Pradesh"
                           HorizontalTextAlignment="Center" TextColor="Navy" FontSize="20" FontAttributes="Bold"/>
                </VerticalStackLayout>

                <!-- Description Section (Scrollable) -->
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout x:Name="stack_descripton" Spacing="10">
                        <loca:JustifiedLabel Text="The X10 Registration Card mobile application is useful for the various unemployed youth's who are registered at various Employment Exchanges of Himachal Pradesh."
                                             FontSize="16"/>
                        <loca:JustifiedLabel Text="The X10 Registration Card mobile app offers the following functionalities to the candidates :" FontSize="16" FontAttributes="Bold"/>
                        <loca:JustifiedLabel Text="➤ Candidate can self register/sign up and activate the account &amp; can fill all the required registration forms." FontSize="16"/>
                        <loca:JustifiedLabel Text="➤ Candidate can view the personal, contact, qualification and other details." FontSize="16"/>
                        <loca:JustifiedLabel Text="➤ Candidate can view the relevant vacancy information, if available, matching his/her qualifications." FontSize="16"/>
                        <loca:JustifiedLabel Text="➤ Candidate can view the sponsorship details for recruitment to various vacancies published." FontSize="16"/>
                        <loca:JustifiedLabel Text="➤ Candidate can view the details of different allowances provided to him, if any." FontSize="16"/>
                        <loca:JustifiedLabel Text="➤ Candidate can view the Job Fairs, if any." FontSize="16"/>
                        <loca:JustifiedLabel Text="➤ Candidate can update his/her employment status." FontSize="16"/>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Border>

        <!-- Button (Fixed Position) -->
        <Button Grid.Row="1" x:Name="btn_submit" Text="Proceed For Login &amp; Registration"
                FontSize="18" BackgroundColor="#058ef2" TextColor="White" CornerRadius="15"
                HorizontalOptions="Center" Clicked="btn_submit_Clicked" Margin="0, 10" FontAttributes="Bold"/>

        <!-- Footer (Fixed Position) -->
        <Label Grid.Row="2" Text="Centre Of Competence For Mobile Application Development NIC Himachal Pradesh"
               FontSize="14" Padding="5" BackgroundColor="White" TextColor="Navy"
               HorizontalTextAlignment="Center" FontAttributes="Bold" HorizontalOptions="Fill" VerticalOptions="End"/>

        <!-- Loading Overlay (Fixed Position) -->
        <ContentView x:Name="Loading_activity"
          BackgroundColor="#C0808080"
          Padding="20"
          IsVisible="false"
          AbsoluteLayout.LayoutBounds="0,0,1,1"
          AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Border Stroke="Transparent" BackgroundColor="White" Padding="10">
                    <HorizontalStackLayout Spacing="10">
                        <ActivityIndicator IsRunning="True" IsVisible="True"/>
                        <Label x:Name="lbl_PleaseWait"
                    Text="Please Wait ..."
                    TextColor="Black"
                    FontAttributes="Bold"
                    VerticalTextAlignment="Center" />
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ContentView>
    </Grid>
</ContentPage>