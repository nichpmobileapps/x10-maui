<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X10Card.NewUserRegistration.ContactDetailsPage"
             Title="ContactDetailsPage">

    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
            <Image Source="ic_himachallogo.png" HeightRequest="40" VerticalOptions="Center"/>
            <Label Text="X10 (Registration Card)"
                   Grid.Column="1"
                   FontSize="18"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ic_home.png" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <Grid>

        <Grid Margin="9" RowDefinitions="Auto, *, Auto">

            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Button x:Name="btn_header" CornerRadius="10" Text="Contact Details" HorizontalOptions="Fill" TextColor="White" BackgroundColor="Navy" FontSize="16" FontAttributes="Bold"/>
                <Label Text="*Fields marked are mandatory" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Navy" FontSize="14" />
            </VerticalStackLayout>

            <ScrollView Grid.Row="1" VerticalOptions="Fill">
                <VerticalStackLayout Spacing="10">

                    <Border StrokeShape="RoundRectangle 10" Stroke="#058ef2" VerticalOptions="Fill" Padding="5">
                        <VerticalStackLayout Spacing="5">

                            <Label Text="ENTER MOBILE NUMBER *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Entry x:Name="entry_mobileno" Placeholder="ENTER MOBILE NUMBER" MaxLength="10" Keyboard="Numeric" TextColor="Black" FontSize="16" />

                            <Label Text="ENTER EMAIL-ID *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Entry x:Name="entry_email" Placeholder="ENTER EMAIL-ID" MaxLength="25" Keyboard="Email" TextColor="Black" FontSize="16" />

                            <Label Text="SELECT DISTRICT *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Picker TextColor="Black" TitleColor="Black" Title="SELECT DISTRICT" x:Name="picker_district" SelectedIndexChanged="picker_district_SelectedIndexChanged"/>

                            <Label Text="SELECT AREA TYPE *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <HorizontalStackLayout Spacing="20">
                                <RadioButton x:Name="rd_RURAL" Content="RURAL" GroupName="areatypegroup" TextColor="Navy" FontAttributes="Bold" FontSize="16" IsChecked="True" CheckedChanged="rd_RURAL_CheckedChanged"/>
                                <RadioButton x:Name="rd_URBAN" Content="URBAN" GroupName="areatypegroup" TextColor="Navy" FontAttributes="Bold" FontSize="16" CheckedChanged="rd_RURAL_CheckedChanged"/>
                            </HorizontalStackLayout>

                            <Label Text="SELECT TEHSIL *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Picker TextColor="Black" TitleColor="Black" Title="SELECT TEHSIL NAME " x:Name="picker_tehsil" SelectedIndexChanged="picker_tehsil_SelectedIndexChanged"/>

                            <Label Text="SELECT VILLAGE *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Editor Placeholder="Tap To Select Village Name" x:Name="editor_VillageName" PlaceholderColor="Black" HeightRequest="70" Focused="editor_VillageName_Focused" AutoSize="TextChanges" FontSize="16" />

                            <Label Text="ENTER POST OFFICE *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Entry x:Name="entry_PO" MaxLength="50" Placeholder="ENTER POST OFFICE" TextColor="Black" FontSize="16" />

                            <Label Text="ENTER STREET BUILDING" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Editor HeightRequest="70" AutoSize="TextChanges" x:Name="editor_streetbuilding" MaxLength="50" Placeholder="ENTER STREET BUILDING" TextColor="Black" FontSize="16" />

                            <Label Text="ENTER PINCODE *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Entry x:Name="entry_pincode" Placeholder="ENTER PINCODE" MaxLength="6" Keyboard="Numeric" TextColor="Black" FontSize="16" />

                            <Label Text="ENTER ALTERNATE PHONE NUMBER" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Entry x:Name="entry_phoneno" Placeholder="ENTER ALTERNATE PHONE NUMBER" MaxLength="12" Keyboard="Numeric" TextColor="Black" FontSize="16" />

                            <Label Text="ENTER PERMANENT ADDRESS *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Editor HeightRequest="70" AutoSize="TextChanges" x:Name="editor_permanentaddress" MaxLength="50" Placeholder="ENTER PERMANENT ADDRESS" TextColor="Black" FontSize="16" />

                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                <CheckBox x:Name="chkbx_address" CheckedChanged="chkbx_address_CheckedChanged"/>
                                <Label Text="SAME AS PERMANENT ADDRESS" VerticalOptions="Center" TextColor="Navy" FontSize="16"/>
                            </HorizontalStackLayout>

                            <Label Text="ENTER CORRESPONDENCE ADDRESS *" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                            <Editor HeightRequest="70" AutoSize="TextChanges" x:Name="editor_corresponsenceaddress" MaxLength="50" Placeholder="ENTER CORRESPONDENCE ADDRESS" TextColor="Black" FontSize="16" />

                            <Label Text="Address Proof Document Details" BackgroundColor="Navy" TextColor="White" Padding="5" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

                            <Border StrokeShape="RoundRectangle 20" Stroke="Navy" Padding="5">
                                <VerticalStackLayout Spacing="5">

                                    <Label Text="SELECT ISSUE DATE" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                                    <HorizontalStackLayout HorizontalOptions="Fill">
                                        <Entry TextColor="Black" PlaceholderColor="Black" HorizontalOptions="Fill" FontSize="16" Placeholder="SELECT ISSUE DATE" x:Name="Entry_issuedate" Focused="Entry_issuedate_Focused" />
                                        <DatePicker x:Name="datepicker_issuedate" IsVisible="false" Format="dd/MM/yyyy" DateSelected="datepicker_issuedate_DateSelected" HorizontalOptions="Fill"/>
                                    </HorizontalStackLayout>

                                    <Label Text="ENTER CERTIFICATE NO" TextColor="Navy" FontSize="16" FontAttributes="Bold" />
                                    <Entry x:Name="entry_certificateno" Placeholder="ENTER CERTIFICATE NO" TextColor="Black" FontSize="16" />

                                    <HorizontalStackLayout HorizontalOptions="Fill" Spacing="5">
                                        <Label x:Name="lbl_doc1" Text="DOCUMENT" TextColor="Navy" FontSize="16" HorizontalOptions="Fill" VerticalTextAlignment="Center" FontAttributes="Bold" Padding="5"></Label>
                                        <Label x:Name="lbl_pdf1" IsVisible="false" Text="PDF Uploaded Successfully" VerticalTextAlignment="Center" ></Label>
                                        <Button x:Name="btn_uploaddoc1" Text="Choose File..." Clicked="btn_uploaddoc1_Clicked" />
                                        <ImageButton IsVisible="false" x:Name="btn_viewdoc" Source="ic_viewpdf.png" Clicked="btn_viewdoc_Clicked" HeightRequest="45" BackgroundColor="Transparent"/>
                                    </HorizontalStackLayout>

                                </VerticalStackLayout>
                            </Border>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </ScrollView>

            <HorizontalStackLayout Grid.Row="2" HorizontalOptions="Fill" Spacing="10" Margin="0, 10, 0, 0">
                <Button IsVisible="false" x:Name="btn_cancel" FontSize="18" Text="Cancel" BackgroundColor="#0072b6" TextColor="White" CornerRadius="15" HorizontalOptions="Fill" Clicked="btn_cancel_Clicked" Padding="10"/>
                <Button IsVisible="false" x:Name="btn_next" FontSize="20" Text="Next" BackgroundColor="#058ef2" TextColor="White" CornerRadius="15" HorizontalOptions="Fill" Clicked="btn_next_Clicked" Padding="10" FontAttributes="Bold"/>
                <Button IsVisible="false" x:Name="btn_submit" FontSize="20" Text="Save &amp; Next" BackgroundColor="#058ef2" TextColor="White" CornerRadius="15" HorizontalOptions="Fill" Clicked="btn_submit_Clicked" Padding="10" FontAttributes="Bold"/>
            </HorizontalStackLayout>

        </Grid>

        <ContentView x:Name="popupvillagename" BackgroundColor="#C0808080" Padding="20" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="white" Padding="10">
                <Label x:Name="lbl_popupvillagename" Text="Tap To Select village Name" Padding="6" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="16" FontAttributes="Bold" TextColor="Navy" />
                <Border StrokeShape="RoundRectangle 20" Padding="0" Margin="3" Stroke="Navy">
                    <SearchBar Placeholder="Type village Name" x:Name="SearchBar_villagename" IsSpellCheckEnabled="False" PlaceholderColor="#736f6f" BackgroundColor="#e0e0e0" TextColor="Black" CancelButtonColor="Red" Keyboard="Plain" TextChanged="SearchBar_villagename_TextChanged"/>
                </Border>

                <ListView x:Name="listview_villagename" HasUnevenRows="True" SeparatorColor="Navy" ItemTapped="listview_villagename_ItemTapped" BackgroundColor="White">
                    <ListView.ItemTemplate >
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout>
                                    <Label Text="{Binding VillageName}" HorizontalOptions="Fill" Padding="10" HorizontalTextAlignment="Start" TextColor="Black"/>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button BackgroundColor="Navy" TextColor="White" FontAttributes="Bold" x:Name="popupvillagenameCancel" Clicked="popupvillagenameCancel_Clicked" Text="Cancel" Margin="5" HorizontalOptions="Fill"/>
            </VerticalStackLayout>
        </ContentView>

        <ContentView x:Name="Loading_activity" BackgroundColor="#C0808080" Padding="20" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Border BackgroundColor="White" Padding="10" Stroke="Transparent">
                    <HorizontalStackLayout Spacing="10">
                        <ActivityIndicator IsVisible="true" IsRunning="true" Margin="5"/>
                        <Label x:Name="lbl_PleaseWait" Text="Please Wait ..." TextColor="Black" FontAttributes="Bold" HorizontalOptions="Fill" VerticalTextAlignment="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ContentView>
    </Grid>

</ContentPage>