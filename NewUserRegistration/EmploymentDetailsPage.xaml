<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X10Card.NewUserRegistration.EmploymentDetailsPage"
             IconImageSource="ic_update.png">

    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
            <Image Source="ic_himachallogo.png" HeightRequest="40" VerticalOptions="Center"/>

            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" Spacing="0">
                <Label x:Name="lbl_navigation_header1" Style="{StaticResource NavigationLabelColor}" FontSize="15" FontAttributes="Bold" HorizontalTextAlignment="Center"
                       Text="Department Of Labour &amp; Employment" VerticalTextAlignment="Center" />
                <Label x:Name="lbl_navigation_header" Style="{StaticResource NavigationLabelColor}" FontSize="13" FontAttributes="Bold"
                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            </VerticalStackLayout>
        </Grid>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ic_home.png" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <Grid>

        <Grid Margin="9" RowDefinitions="*,Auto">

            <VerticalStackLayout Grid.Row="0" Spacing="5">

                <Button x:Name="btn_header" CornerRadius="10" Text="Employment Details" HorizontalOptions="Fill" TextColor="White" BackgroundColor="Navy" FontSize="16" FontAttributes="Bold"/>
                <Label Text="*Fields marked are mandatory" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="Navy" FontSize="14" />

                <VerticalStackLayout VerticalOptions="Fill">

                    <Border StrokeShape="RoundRectangle 10" Stroke="#078ff0" VerticalOptions="Fill" BackgroundColor="White" Padding="5">
                        <ScrollView VerticalOptions="Fill">
                            <VerticalStackLayout Spacing="5">

                                <Label TextColor="Navy" x:Name="lbl_EmploymentStatus" Text="Select Employment Status *" FontSize="16" FontAttributes="Bold" />
                                <Picker TextColor="Black" TitleColor="Black" Title="Select Employment Status" x:Name="Picker_EmploymentStatus" SelectedIndexChanged="Picker_EmploymentStatus_SelectedIndexChanged"/>

                                <VerticalStackLayout x:Name="stack_sector" IsVisible="false">
                                    <Label TextColor="Navy" x:Name="lbl_EmploymentSector" Text="Select Employment Sector *" FontSize="16" FontAttributes="Bold" />
                                    <Picker TextColor="Black" TitleColor="Black" Title="Select Employment Sector" x:Name="Picker_EmploymentSector" SelectedIndexChanged="Picker_EmploymentSector_SelectedIndexChanged"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout x:Name="stack_type" IsVisible="false">
                                    <Label TextColor="Navy" x:Name="lbl_ppvalues" Text="Select Employment Type *" FontSize="16" FontAttributes="Bold" />
                                    <Picker TextColor="Black" TitleColor="Black" Title="Select Employment Type" x:Name="Picker_employmentype" SelectedIndexChanged="Picker_employmentype_SelectedIndexChanged"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout x:Name="stack_regorganisationname" IsVisible="false">
                                    <Label TextColor="Navy" Text="Enter Registered Organization Name*" FontSize="16" Padding="5" FontAttributes="Bold" />
                                    <Editor Placeholder="Tap To Select Organization Name" x:Name="editor_reOrganizationName" PlaceholderColor="Black" HeightRequest="70" Focused="editor_OrganizationName_Focused" AutoSize="TextChanges" FontSize="16" />
                                </VerticalStackLayout>

                                <VerticalStackLayout x:Name="stack_organisationr" IsVisible="false">
                                    <Label TextColor="Navy" Text="Enter Name of Organization *" FontSize="16" Padding="5" FontAttributes="Bold" />
                                    <Editor Placeholder="Enter Name of Organization" x:Name="editor_organisation" AutoSize="TextChanges" FontSize="16" />
                                </VerticalStackLayout>

                            </VerticalStackLayout>
                        </ScrollView>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Fill" Spacing="10" Margin="0, 10, 0, 0">
                <Button IsVisible="false" x:Name="btn_cancel" FontSize="18" Text="Cancel"  CornerRadius="15" HorizontalOptions="Fill" Clicked="btn_cancel_Clicked" Padding="10"/>
                <Button IsVisible="false" x:Name="btn_next" FontSize="20" Text="Next" CornerRadius="15" HorizontalOptions="Fill" Clicked="btn_next_Clicked" Padding="10" FontAttributes="Bold"/>
                <Button IsVisible="false" x:Name="btn_submit" FontSize="20" Text="Save &amp; Next" CornerRadius="15" HorizontalOptions="Fill" Clicked="btn_submit_Clicked" Padding="10" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </Grid>

        <ContentView x:Name="popuporganisationname" BackgroundColor="#C0808080" Padding="20" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout HorizontalOptions="Fill" VerticalOptions="Center" BackgroundColor="white" Padding="10">
                <Label x:Name="lbl_popuporganisationname" Text="Tap To Select Organisation Name" Padding="6" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="16" FontAttributes="Bold" TextColor="Navy" />

                <Border Stroke="Navy" StrokeShape="RoundRectangle 20" Padding="0" Margin="3">
                    <SearchBar Placeholder="Type Organisation Name" x:Name="SearchBar_organisationname" IsSpellCheckEnabled="False" PlaceholderColor="#736f6f" BackgroundColor="#e0e0e0" TextColor="Black" CancelButtonColor="Red" Keyboard="Plain" TextChanged="SearchBar_organisationname_TextChanged"/>
                </Border>

                <ListView x:Name="listview_organisationname" HasUnevenRows="True" SeparatorColor="Navy" ItemTapped="listview_organisationname_ItemTapped" BackgroundColor="White" VerticalOptions="FillAndExpand">
                    <ListView.ItemTemplate >
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout>
                                    <Label Text="{Binding OrgName}" HorizontalOptions="Fill" Padding="10" HorizontalTextAlignment="Start" TextColor="Black"/>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button BackgroundColor="Navy" TextColor="White" FontAttributes="Bold" x:Name="popuporganisationnameCancel" Clicked="popuporganisationnameCancel_Clicked" Text="Cancel" Margin="5" HorizontalOptions="Fill"/>
            </VerticalStackLayout>
        </ContentView>


        <ContentView x:Name="Loading_activity" BackgroundColor="#C0808080" Padding="20" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Border BackgroundColor="White" Padding="10" Stroke="Transparent">
                    <HorizontalStackLayout Spacing="10">
                        <ActivityIndicator IsVisible="true" IsRunning="true" Margin="5"/>
                        <Label x:Name="Lbl_PleaseWait" Text="Please Wait ..." TextColor="Black" VerticalOptions="Center" FontAttributes="Bold" />
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ContentView>
    </Grid>
</ContentPage>